      "cell_type": "code",
      "source": [
        "# Instalamos Pillow (por si no está en Colab)\n",
        "!pip install pillow\n",
        "\n",
        "from PIL import Image, ImageDraw, ImageFont\n",
        "import os\n",
        "\n",
        "# Crear una carpeta temporal para los fotogramas\n",
        "os.makedirs(\"frames\", exist_ok=True)\n",
        "\n",
        "# Fuente por defecto (Colab no siempre trae fuentes externas)\n",
        "try:\n",
        "    font = ImageFont.truetype(\"DejaVuSans-Bold.ttf\", 60)\n",
        "except:\n",
        "    font = ImageFont.load_default()\n",
        "\n",
        "# Generar varios cuadros con \"HOLA :)\" moviéndose\n",
        "frames = []\n",
        "for i in range(10):\n",
        "    # Crear una imagen en blanco\n",
        "    img = Image.new(\"RGB\", (300, 150), (255, 255, 255))\n",
        "    draw = ImageDraw.Draw(img)\n",
        "\n",
        "    # Texto principal\n",
        "    draw.text((50, 40), \"HOLA\", font=font, fill=(0, 0, 0))\n",
        "\n",
        "    # Carita feliz que se mueve\n",
        "    x = 200 + (i * 5) % 40  # movimiento horizontal\n",
        "    y = 80\n",
        "    draw.text((x, y), \":)\", font=font, fill=(0, 0, 0))\n",
        "\n",
        "    frames.append(img)\n",
        "\n",
        "# Guardar como GIF animado\n",
        "frames[0].save(\"hola.gif\",\n",
        "               save_all=True,\n",
        "               append_images=frames[1:],\n",
        "               duration=200, # velocidad (ms por frame)\n",
        "               loop=0)\n",
        "\n",
        "print(\"✅ GIF creado como hola.gif\")\n",
        "from IPython.display import Image\n",
        "Image(filename=\"hola.gif\")\n"
      ],
